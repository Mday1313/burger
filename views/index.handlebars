

{{burgerObject}}




<h1>Burgers!</h1>

<h2>YUMMY BURGERS!</h2>

<ul>
  {{#each burgers}}
  <li>
    <p>
      {{this.id}}. {{this.burger_name}}

      <button data-movieid="{{this.id}}" class="delplan">Devour!!</button>
    </p>
  </li>
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devouredchecked>">Available?</label><br>
    <input type="radio" name="devoured" value="1">  Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>